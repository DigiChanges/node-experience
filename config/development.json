{
  "env": "development",
  "serverPort": 8089,
  "dbConfig": {
    "type": "mongodb",
    "host": "db",
    "port": 27017,
    "database": "experience",
    "username": "experience",
    "password": "experience",
    "synchronize": true,
    "migrationsRun": false,
    "logging": true,
    "entities": [
      "src/Entities/*.ts"
    ],
    "migrations": [
      "src/Migrations/**/*.ts"
    ],
    "subscribers": [
      "src/Subscribers/**/*.ts"
    ],
    "cli": {
      "entitiesDir": "/src/Entities",
      "migrationsDir": "/src/Migrations",
      "subscribersDir": "/src/Subscribers"
    }
  },
  "encryption": {
    "bcrypt": {
      "type": "bcrypt",
      "saltRounds": 10,
      "algorithm": "HS512"
    },
    "md5": {
      "type": "md5"
    }
  },
  "encryptionDefault": "bcrypt",
  "jwt": {
    "secret": "mySecretJWT",
    "expires": 3600,
    "iss": "digichanges",
    "aud": "digichanges.com"
  },
  "mail": {
    "host": "mail",
    "port": 1025,
    "username": "",
    "password": "",
    "secure": false,
    "senderName": "Notifications",
    "senderEmailDefault": "notification@localhost.com"
  },
  "url":{
    "urlApi": "http://localhost:8089/api/",
    "urlWeb": "http://localhost:3000/"
  },
  "productInfo": {
    "productName": "experience"
  },
  "validationSettings": {
    "password": {
      "min": 3,
      "max": 15
    }
  },
  "apiWhitelist": [
    {
      "method": ["POST"],
      "url": "/api/auth/login"
    },
    {
      "method": ["POST"],
      "url": "/api/auth/forgotPassword"
    },
    {
      "method": ["POST"],
      "url": "/api/auth/changeForgotPassword"
    },
    {
      "method": ["POST"],
      "url": "/api/users"
    }
  ]
}