{
  "env": "test",
  "serverPort": 8089,
  "dbConfig": {
    "typeORM": {
      "type": "mongodb",
      "host": "db",
      "port": 27017,
      "database": "experience",
      "username": "experience",
      "password": "experience",
      "synchronize": true,
      "migrationsRun": false,
      "logging": true,
      "entities": [
        "./dist/src/Infrastructure/Entities/**/*.js"
      ],
      "migrations": [
        "./dist/src/Infrastructure/Migrations/**/*.js"
      ],
      "subscribers": [
        "./dist/src/Infrastructure/Subscribers/**/*.js"
      ],
      "cli": {
        "entitiesDir": "./src/Infrastructure/Entities",
        "migrationsDir": "./src/Infrastructure/Migrations",
        "subscribersDir": "./src/Infrastructure/Subscribers"
      }
    },
    "default": "typeORM"
  },
  "encryption": {
    "bcrypt": {
      "type": "bcrypt",
      "saltRounds": 10,
      "algorithm": "HS512"
    },
    "md5": {
      "type": "md5"
    }
  },
  "encryptionDefault": "bcrypt",
  "jwt": {
    "secret": "mySecretJWT",
    "expires": 3600,
    "iss": "digichanges",
    "aud": "digichanges.com"
  },
  "mail": {
    "host": "mail",
    "port": 1025,
    "username": "",
    "password": "",
    "secure": false,
    "senderName": "Notifications",
    "senderEmailDefault": "notification@localhost.com"
  },
  "url":{
    "urlApi": "http://localhost:8089/api/",
    "urlWeb": "http://localhost:3000/"
  },
  "productInfo": {
    "productName": "experience"
  },
  "validationSettings": {
    "password": {
      "min": 3,
      "max": 15
    }
  },
  "apiWhitelist": [
    {
      "method": ["GET"],
      "url": "/"
    },
    {
      "method": ["POST"],
      "url": "/api/auth/login"
    },
    {
      "method": ["POST"],
      "url": "/api/auth/forgotPassword"
    },
    {
      "method": ["POST"],
      "url": "/api/auth/changeForgotPassword"
    },
    {
      "method": ["POST"],
      "url": "/api/users"
    }
  ]
}
